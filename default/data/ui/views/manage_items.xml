<dashboard script="manage-items.js" stylesheet="manage-items.css" onunloadCancelJobs="true" hideFilters="true">
  <label>Manage Item(s)</label> 
  <fieldset submitButton="false">
    <input type="multiselect" token="freezers" searchWhenChanged="true">
      <label>Freezers</label>
      <fieldForLabel>name</fieldForLabel>
      <fieldForValue>id</fieldForValue>
      <search>
        <query>| `freezers`
| search active=1 default=1</query>
        <earliest>-15m</earliest>
        <latest>now</latest>
      </search>
      <delimiter>  OR </delimiter>
      <choice value="*">All Freezers</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>freezer="</valuePrefix>
      <valueSuffix>"</valueSuffix>
    </input>
  </fieldset>
  <row>
    <panel>
      <html>
        <div id="myTable"></div>
      </html>
    </panel>
 </row>
</dashboard>