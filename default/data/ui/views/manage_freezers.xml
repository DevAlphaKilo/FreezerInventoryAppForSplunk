<dashboard script="manage-freezers.js" stylesheet="manage-freezers.css" onunloadCancelJobs="true" hideFilters="true">
  <label>Manage Freezer(s)</label>
  <row>
    <panel>
      <single>
        <title>Total Freezers</title>
        <search>
          <query>| `freezers`
| stats dc(id)</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Active Freezers</title>
        <search>
          <query>| `freezers`
| search active=1
| stats dc(id)</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Inactive Freezers</title>
        <search>
          <query>| `freezers`
| search NOT active=1
| stats dc(id)</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
  </row>
  <row>
    <panel id="warning_duplicate" depends="$show_warning_duplicate$">
      <html>
        <div class="container-warning">
          <div class="container-warning-header">Warning</div>
          <div class="container-warning-body">You have multiple freezers marked as 'default' status, this is not normal and should be typically avoided. Please do not mark more than one freezer as default!</div>
          <input id="fix_issue_button" type="button" value="Fix Issue"/>
        </div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <div id="myTable"/>
      </html>
    </panel>
  </row>
</dashboard>